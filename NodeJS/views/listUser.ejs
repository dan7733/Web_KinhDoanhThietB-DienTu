                    <tr><td colspan="9">Kh√¥ng c√≥ ng∆∞·ªùi d√πng n√†o ƒë∆∞·ª£c t√¨m th·∫•y.</td></tr>
                <% } %>
            </tbody>
        </table>
    </div>

    <nav>
        <ul class="pagination justify-content-center listuser-pagination">
            <li class="page-item <%= data.currentPage === 1 ? 'disabled' : '' %>">
                <a class="page-link" href="?page=<%= data.currentPage - 1 %>&search=<%= data.search %>&sort=<%= data.sort %>">¬´</a>
            </li>

            <li class="page-item <%= data.currentPage === 1 ? 'active' : '' %>">
                <a class="page-link" href="?page=1&search=<%= data.search %>&sort=<%= data.sort %>">1</a>
            </li>

            <% if (data.currentPage > 4) { %>
                <li class="page-item disabled"><span class="page-link">...</span></li>
            <% } %>

            <% for (let i = Math.max(2, data.currentPage - 2); i <= Math.min(data.totalPages - 1, data.currentPage + 2); i++) { %>
                <li class="page-item <%= data.currentPage === i ? 'active' : '' %>">
                    <a class="page-link" href="?page=<%= i %>&search=<%= data.search %>&sort=<%= data.sort %>"><%= i %></a>
                </li>
            <% } %>

            <% if (data.currentPage < data.totalPages - 3) { %>
                <li class="page-item disabled"><span class="page-link">...</span></li>
            <% } %>

            <% if (data.totalPages > 1) { %>
                <li class="page-item <%= data.currentPage === data.totalPages ? 'active' : '' %>">
                    <a class="page-link" href="?page=<%= data.totalPages %>&search=<%= data.search %>&sort=<%= data.sort %>"><%= data.totalPages %></a>
                </li>
            <% } %>

            <li class="page-item <%= data.currentPage === data.totalPages ? 'disabled' : '' %>">
                <a class="page-link" href="?page=<%= data.currentPage + 1 %>&search=<%= data.search %>&sort=<%= data.sort %>">¬ª</a>
            </li>
        </ul>
    </nav>
</div>

<script>
document.getElementById('user_searchInput').addEventListener('keypress', function (e) {
    if (e.key === 'Enter') {
        const keyword = e.target.value;
        const urlParams = new URLSearchParams(window.location.search);
        urlParams.set('search', keyword);
        urlParams.set('page', 1); // Reset v·ªÅ trang 1 khi t√¨m ki·∫øm m·ªõi
        window.location.href = `?${urlParams.toString()}`;
    }
});
</script>
