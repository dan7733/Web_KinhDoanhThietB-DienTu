                    <th>Tr·∫°ng th√°i</th>
                    <th colspan="2">Thao t√°c</th>
                </tr>
            </thead>
            <tbody>
                <% if (data.rows && data.rows.length > 0) { %>
                    <% data.rows.forEach((user, index) => { %>
                        <tr>
                            <td><%= (data.currentPage - 1) * 5 + index + 1 %></td>
                            <td><%- user.username || '<i class="fa fa-times text-danger"></i>' %></td>
                            <td><%- user.fullname || '<i class="fa fa-times text-danger"></i>' %></td>
                            <td><%- user.email || '<i class="fa fa-times text-danger"></i>' %></td>
                            <td><%- user.phone || '<i class="fa fa-times text-danger"></i>' %></td>
                            <td><%= user.role === 1 ? 'Admin' : 'User' %></td>
                            <td><%- user.status || '<i class="fa fa-times text-danger"></i>' %></td>
                            <td>
                                <a href="/edituser/<%= user.user_id %>" class="btn btn-sm btn-primary">
                                    <i class="bi bi-pencil-square"></i> S·ª≠a
                                </a>
                                <form action="/deleteuser" method="POST" style="display:inline-block;" 
                                    onsubmit="return confirm('B·∫°n c√≥ ch·∫Øc ch·∫Øn mu·ªën x√≥a ng∆∞·ªùi d√πng n√†y kh√¥ng?');">
                                    <input type="hidden" name="user_id" value="<%= user.user_id %>" />
                                    <button class="btn btn-sm btn-danger" type="submit">
                                        <i class="bi bi-trash"></i> X√≥a
