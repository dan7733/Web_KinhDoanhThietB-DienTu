                data-bs-toggle="dropdown">
                <i class="fa-solid fa-filter"></i> L·ªçc
            </button>
            <ul class="dropdown-menu listuser-option">
                <li><a class="dropdown-item" href="?page=1&search=<%= data.search %>">Reset</a></li>
                <li><a class="dropdown-item" href="?page=1&search=<%= data.search %>&sort=role_asc">Quy·ªÅn tƒÉng</a></li>
                <li><a class="dropdown-item" href="?page=1&search=<%= data.search %>&sort=role_desc">Quy·ªÅn gi·∫£m</a></li>
            </ul>
