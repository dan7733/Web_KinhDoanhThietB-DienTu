<div class="container">
    <div class="updateproductdetail-inforinput card p-4 shadow-sm">
        <h4 class="mb-3">
            <i class="fas fa-edit text-primary"></i> Cập nhật chi tiết sản phẩm
        </h4>
        <% if (data && data.message) { %>
            <div class="alert alert-info">
                <%= data.message %>
            </div>
        <% } %>
        <form action="/updateproductdetail" method="POST">
            <!-- Hidden product_id -->
            <input type="hidden" name="product_id" value="<%= data.productdetail ? data.productdetail.product_id : '' %>">

            <div class="mb-3">
                <label class="form-label"><i class="fas fa-cogs"></i> Hệ điều hành</label>
                <input type="text" class="form-control" name="operating_system" placeholder="VD: Android, iOS..."
                    value="<%= data.productdetail ? data.productdetail.operating_system : '' %>">
            </div>

            <div class="mb-3">
                <label class="form-label"><i class="fas fa-hdd"></i> Bộ nhớ trong</label>
                <input type="text" class="form-control" name="storage" placeholder="VD: 128GB, 256GB..."
                    value="<%= data.productdetail ? data.productdetail.storage : '' %>">
            </div>

            <div class="mb-3">
                <label class="form-label"><i class="fas fa-memory"></i> RAM</label>
                <input type="text" class="form-control" name="ram" placeholder="VD: 4GB, 8GB..."
                    value="<%= data.productdetail ? data.productdetail.ram : '' %>">
            </div>

            <div class="mb-3">
                <label class="form-label"><i class="fas fa-microchip"></i> Bộ xử lý</label>
                <input type="text" class="form-control" name="processor" placeholder="VD: Snapdragon 888, M1..."
                    value="<%= data.productdetail ? data.productdetail.processor : '' %>">
            </div>

            <div class="mb-3">
                <label class="form-label"><i class="fas fa-calendar-alt"></i> Năm phát hành</label>
                <input type="number" class="form-control" name="release_year" placeholder="VD: 2023"
                    value="<%= data.productdetail ? data.productdetail.release_year : '' %>">
            </div>

            <button type="submit" class="btn updateproductdetail-btn-update">
                <i class="fas fa-save"></i> Cập nhật
            </button>
        </form>
    </div>
</div>
