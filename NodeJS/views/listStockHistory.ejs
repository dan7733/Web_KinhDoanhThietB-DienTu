                    <th>STT</th>
                    <th>T√™n s·∫£n ph·∫©m</th>
                    <th>Lo·∫°i giao d·ªãch</th>
                    <th>S·ªë l∆∞·ª£ng</th>
                    <th>Th·ªùi gian</th>
                </tr>
            </thead>
            <tbody>
                <% if (data.rows && data.rows.length > 0) { %>
                    <% data.rows.forEach((history, index) => { %>
                        <tr>
                            <td><%= (data.currentPage - 1) * 5 + index + 1 %></td>
                            <td><%= history.Product.name %></td>
                            <td>
                                <span class="stockhistory-badge <%= history.transaction_type === 'IN' ? 'stockhistory-bg-success' : 'stockhistory-bg-danger' %>">
                                    <%= history.transaction_type === 'IN' ? 'Nh·∫≠p' : 'Xu·∫•t' %>
                                </span>
                            </td>
                            <td><%= history.quantity %></td>
                            <td><%= new Date(history.transaction_date).toLocaleString('vi-VN') %></td>
                        </tr>
                    <% }) %>
                <% } else { %>
                    <tr><td colspan="5">Kh√¥ng c√≥ l·ªãch s·ª≠ giao d·ªãch n√†o ƒë∆∞·ª£c t√¨m th·∫•y.</td></tr>
                <% } %>
            </tbody>
        </table>
    </div>

    <!-- Ph√¢n trang -->
    <nav>
        <ul class="pagination justify-content-center stockhistory-pagination">
            <li class="page-item <%= data.currentPage === 1 ? 'disabled' : '' %>">
                <a class="page-link" href="?page=<%= data.currentPage - 1 %>&search=<%= data.search || '' %>&productId=<%= data.productId || '' %>&transactionType=<%= data.transactionType || '' %>&startDate=<%= data.startDate || '' %>&endDate=<%= data.endDate || '' %>">¬´</a>
            </li>
            <li class="page-item <%= data.currentPage === 1 ? 'active' : '' %>">
                <a class="page-link" href="?page=1&search=<%= data.search || '' %>&productId=<%= data.productId || '' %>&transactionType=<%= data.transactionType || '' %>&startDate=<%= data.startDate || '' %>&endDate=<%= data.endDate || '' %>">1</a>
            </li>
            <% if (data.currentPage > 4) { %>
                <li class="page-item disabled"><span class="page-link">...</span></li>
            <% } %>
            <% for (let i = Math.max(2, data.currentPage - 2); i <= Math.min(data.totalPages - 1, data.currentPage + 2); i++) { %>
                <li class="page-item <%= data.currentPage === i ? 'active' : '' %>">
                    <a class="page-link" href="?page=<%= i %>&search=<%= data.search || '' %>&productId=<%= data.productId || '' %>&transactionType=<%= data.transactionType || '' %>&startDate=<%= data.startDate || '' %>&endDate=<%= data.endDate || '' %>"><%= i %></a>
                </li>
            <% } %>
            <% if (data.currentPage < data.totalPages - 3) { %>
                <li class="page-item disabled"><span class="page-link">...</span></li>
            <% } %>
            <% if (data.totalPages > 1) { %>
                <li class="page-item <%= data.currentPage === data.totalPages ? 'active' : '' %>">
                    <a class="page-link" href="?page=<%= data.totalPages %>&search=<%= data.search || '' %>&productId=<%= data.productId || '' %>&transactionType=<%= data.transactionType || '' %>&startDate=<%= data.startDate || '' %>&endDate=<%= data.endDate || '' %>"><%= data.totalPages %></a>
                </li>
            <% } %>
            <li class="page-item <%= data.currentPage === data.totalPages ? 'disabled' : '' %>">
                <a class="page-link" href="?page=<%= data.currentPage + 1 %>&search=<%= data.search || '' %>&productId=<%= data.productId || '' %>&transactionType=<%= data.transactionType || '' %>&startDate=<%= data.startDate || '' %>&endDate=<%= data.endDate || '' %>">¬ª</a>
            </li>
        </ul>
    </nav>
</div>

<script>
document.getElementById('stockhistory_searchInput').addEventListener('keypress', function (e) {
    if (e.key === 'Enter') {
        const keyword = e.target.value;
        const urlParams = new URLSearchParams(window.location.search);
        urlParams.set('search', keyword);
        urlParams.set('page', 1);
        window.location.href = `?${urlParams.toString()}`; // S·ª≠a l·ªói thi·∫øu d·∫•u nh√°y
    }
});
</script>