        </div>
    </form>

    <!-- N√∫t xu·∫•t PDF -->
    <div class="mb-4">
        <a href="/stockhistory/export-pdf?search=<%= data.search || '' %>&productId=<%= data.productId || '' %>&transactionType=<%= data.transactionType || '' %>&startDate=<%= data.startDate || '' %>&endDate=<%= data.endDate || '' %>"
           class="btn stockhistory-btn-success">
            <i class="fas fa-file-pdf"></i> Xu·∫•t PDF l·ªãch s·ª≠
